{
  "name": "pandoc-slides",
  "displayName": "pandoc-slides",
  "description": "Generate beautiful reveal.js slides from markdown using pandoc.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pandoc-slides.helloWorld",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pandoc-slides.sidePreview",
        "title": "Show slides",
        "icon": "$(versions)",
        "_iconInfo": "https://microsoft.github.io/vscode-codicons/dist/codicon.html"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "pandoc-slides.sidePreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Pandoc Slides",
      "properties": {
        "pandocSlides.compileOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Compile slides on save if they are shown in the preview pane."
        },
        "pandocSlides.showNavigationCodeLenses": {
          "type": "boolean",
          "default": true,
          "description": "Show code lenses for jumping from markdown to the corresponding slide."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/yaml-front-matter": "4.1.0",
    "@types/mocha": "^10.0.1",
    "@types/tmp": "0.2.3",
    "@types/uuid": "9.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "tmp-promise": "3.0.3",
    "uuid": "9.0.0",
    "yaml-front-matter": "4.1.1",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
